{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "value": "WindowsVM"
        },
        "adminUsername": {
            "value": "vmadmin"
        },
        "adminPassword": {
            "value": "[concat('Subscription#', subscription().subscriptionId)]"
        },
        "imageSku": {
            "value": "2019-Datacenter"
        },
        "storageAccountType": {
            "value": "Standard_LRS"
        },
        "vmCount": {
            "value": 2
        },
        "vmSize": {
            "value": "Standard_A1"
        }
    }
}